# ============================================================================
# CONFIGURATION STAGING - ENVIRONNEMENT DE TEST
# ============================================================================

# Environnement
NODE_ENV=staging
USE_MOCK_AUTH=true

# Serveur
PORT=5000
HOST=localhost

# Base de donn√©es PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fouta_erp_staging
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# JWT
JWT_SECRET=staging-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Upload
UPLOAD_DIR=./uploads/staging
MAX_FILE_SIZE=10485760

# WebSocket
WS_PORT=5001

# Logs
LOG_LEVEL=debug

# API Externe (optionnel pour staging)
WHATSAPP_API_KEY=
WHATSAPP_API_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_SMTP_USER=
EMAIL_SMTP_PASS=
